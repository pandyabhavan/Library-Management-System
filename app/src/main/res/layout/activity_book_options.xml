<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/choice_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="What would you like to do?" />

    <Button
        android:id="@+id/bAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Add Books" />

    <Button
        android:id="@+id/bSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bAdd"
        android:layout_alignStart="@+id/bAdd"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        android:text="Search Books"
        android:layout_alignRight="@+id/bAdd"
        android:layout_alignEnd="@+id/bAdd" />
</RelativeLayout>
